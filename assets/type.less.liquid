// ==========================================================================
// Typography
// ==========================================================================

html {
    font-size: 62.5%;
}
body {
    color: @text-color;
    line-height: @line-height-base;
}
body, 
input, 
select {
    font-family: @font-family-base;
    .font-size(@font-size-base);
    .font-smoothing(on);
    letter-spacing: -.01em;
    text-rendering: optimizeLegibility;
}

// Links
// -------------------------
a,
.btn-faux-link {
    color: @link-color;
    text-decoration: none;
    transition: color .3s ease;
    
    &:hover,
    &:focus {
        color: @link-hover-color;
    }
    &:focus {
        .tab-focus();
    }
}

// Headings
// -------------------------

h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6 {
    font-family: @headings-font-family;
    font-weight: @headings-font-weight;
    line-height: @headings-line-height;
    color: @headings-color;
    
    small,
    .small {
        font-weight: normal;
        line-height: 1;
        color: @headings-small-color;
    }
}

h1, .h1,
h2, .h2,
h3, .h3 {
    margin-top: @grid-section-padding;
    margin-bottom: (@grid-section-padding / 2);
    
    small,
    .small {
        font-size: 65%;
    }
}
h4, .h4,
h5, .h5,
h6, .h6 {
    margin-top: (@grid-section-padding / 2);
    margin-bottom: (@grid-section-padding / 2);
    
    small,
    .small {
        font-size: 75%;
    }
}
h1, .h1 { 
    .font-size(@font-size-h1); 
    letter-spacing: -2px; 
}
h2, .h2 { 
    .font-size(@font-size-h2); 
    letter-spacing: -1px; 
}
h3, .h3 { .font-size(@font-size-h3); }
h4, .h4 { .font-size(@font-size-h4); }
h5, .h5 { .font-size(@font-size-h5); }
h6, .h6 { .font-size(@font-size-h6); }

// Body text
// -------------------------
p {
    margin: 0 0 @grid-section-padding;
}
small {
    .font-size(@font-size-small);
}
.lead {
    margin-bottom: @grid-section-padding;
    font-size: floor((@font-size-base * 1.15));
    font-weight: 300;
    line-height: 1.4;
    
    @media (min-width: @screen-sm) {
        font-size: (@font-size-base * 1.5);
    }
}
strong {
    color: @headings-color;
}

// Processing block
// -------------------------
.processing-block {
    padding-top: @grid-section-padding * 2;
    padding-bottom: @grid-section-padding * 2;
    text-align: center;
    
    &:before {
        content: "";
        vertical-align: middle;
        top: -1px;
        margin-right: 10px;
    }
}

// Empty block
// -------------------------
.empty-block {
	padding-top: @grid-section-padding * 2;
	padding-bottom: @grid-section-padding * 2;
	.font-size(@font-size-large);
	color: @gray-light;
	text-align: center;
}

// Editing content
// -------------------------
html > body .contenteditable-actions {
    text-align: left;
}

